{
  "manifest_version": 3,
  "name": "Deno Chrome Extension",
  "version": "1.0",
  "description": "A Chrome extension using Deno for server-side logic",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
